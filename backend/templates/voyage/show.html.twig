{% extends 'base.html.twig' %}

{% block title %}Voyage
{% endblock %}

{% block body %}
	<h1>Voyage</h1>

	<div class="table table-hover p-3">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ voyage.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ voyage.nom }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ voyage.image }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ voyage.prix }}</td>
				</tr>
				<tr>
					<th>Datedepart</th>
					<td>{{ voyage.datedepart ? voyage.datedepart|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Datearrivee</th>
					<td>{{ voyage.datearrivee ? voyage.datearrivee|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ voyage.description }}</td>
				</tr>
				<tr>
					<th>Moyentransport</th>
					<td>{{ voyage.moyentransport }}</td>
				</tr>
			</tbody>
		</table>
	</div>


	<div class="show">
		<a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}" class="btn btn-secondary" style="margin-left: 19px;">Éditer</a>

		{{ include('voyage/_delete_form.html.twig') }}
	</div>

	<a href="{{ path('app_voyage_index') }}" class="btn btn-primary">Retour à la liste</a>
{% endblock %}
