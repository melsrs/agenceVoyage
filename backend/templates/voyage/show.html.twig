    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ voyage.nom }}</td>
            </tr>
            <tr>
