{% extends 'base.html.twig' %}

{% block title %}Pays
{% endblock %}

{% block body %}
	<h1>Pays</h1>

	<div class="table table-hover p-3">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ pay.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ pay.nom }}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="show">
		<a href="{{ path('app_pays_edit', {'id': pay.id}) }}" class="btn btn-secondary" style="margin-left: 19px;">Éditer</a>

		{{ include('pays/_delete_form.html.twig') }}
	</div>


	<a href="{{ path('app_pays_index') }}" class="btn btn-primary">Retour à la liste</a>

{% endblock %}
