{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

	<h1>User index</h1>

	{% for message in app.flashes('success') %}
		<div class="bg-success">
			{{ message | join('. <br>') }}
		</div>
	{% endfor %}

	<div class="table table-hover p-3">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Password</th>
					<th>Prenom</th>
					<th>Nom</th>
					<th>Telephone</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.prenom }}</td>
						<td>{{ user.nom }}</td>
						<td>{{ user.telephone }}</td>
						<td>
							<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-warning" style="--bs-btn-padding-y: .15rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem;">show</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary" style="--bs-btn-padding-y: .15rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem;">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<a href="{{ path('app_user_new') }}" class="btn btn-primary">Cr√©er un nouvel utilisateur</a>
{% endblock %}
