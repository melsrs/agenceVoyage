{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<div class="table table-hover p-5">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ user.telephone }}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<a href="{{ path('app_user_index') }}" class="btn btn-primary m-5">Retour à la liste</a>

	<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary" >Éditer</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
