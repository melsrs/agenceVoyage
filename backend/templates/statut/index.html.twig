{% extends 'base.html.twig' %}

{% block title %}Statut index
{% endblock %}

{% block body %}
	<h1>Statut index</h1>

	{% for message in app.flashes('success') %}
		<div class="bg-success">
			{{ message | join('. <br>') }}
		</div>
	{% endfor %}

	<div class="table table-hover p-3">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for statut in statuts %}
					<tr>
						<td>{{ statut.id }}</td>
						<td>{{ statut.nom }}</td>
						<td>
							<a href="{{ path('app_statut_show', {'id': statut.id}) }}" class="btn btn-warning" style="--bs-btn-padding-y: .15rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem;">show</a>
							<a href="{{ path('app_statut_edit', {'id': statut.id}) }}" class="btn btn-secondary" style="--bs-btn-padding-y: .15rem; --bs-btn-padding-x: .4rem; --bs-btn-font-size: .75rem;">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<a href="{{ path('app_statut_new') }}" class="btn btn-primary">Cr√©er un nouveau statut</a>
{% endblock %}
