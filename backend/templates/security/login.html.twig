{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connectés avec
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}

		<h1 class="h3 m-3 font-weight-normal ">S'identifier</h1>
		<div class="identification">
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus>
			<br>
			<label for="inputPassword ">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="checkbox mt-2">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>
			<br>
		</div>
		<div class="divButtonIdenfication ">
			<button class="button" type="submit">
				Se connecter
			</button>
		</div>
	</form>
{% endblock %}
